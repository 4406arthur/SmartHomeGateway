<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/startbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Start" />

    <Button
        android:id="@+id/stopbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startbutton"
        android:layout_below="@+id/startbutton"
        android:text="Stop" />
    
    <Button
        android:id="@+id/show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stopbutton"
        android:layout_below="@+id/stopbutton"
        android:text="Show" />
    
    <TextView
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/show"
        android:layout_below="@+id/show"
        android:textSize="25sp"
        android:text="Public IP Address Port : "/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@+id/port"
        android:layout_toRightOf="@+id/port"
        android:layout_below="@+id/show"
        android:ems="10" />
    
     <TextView
        android:id="@+id/GW_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/port"
        android:layout_below="@+id/port"
        android:textSize="25sp"
        android:text="GW_ID: "/>
     
     <TextView
        android:id="@+id/GW_SECRET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/GW_ID"
        android:layout_below="@+id/GW_ID"
        android:textSize="25sp"
        android:text="GW_SECRET : "/>
     

</RelativeLayout>